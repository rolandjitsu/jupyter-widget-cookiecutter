{
	"compilerOptions": {
		"sourceMap": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noUnusedParameters": false,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"strict": true,
		"lib": [
			"es2017",
			"dom"
		],
		"module": "commonjs",
		"target": "es5",
		"types": [
			"jasmine",
			"node"
		]
	},
	"include": [
		"config/*.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
